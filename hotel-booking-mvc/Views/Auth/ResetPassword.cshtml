@*@model*@
@{ ViewData["Title"] = "Reset Password";
    }
<div class="mx-auto my-auto content-area">
    <div class="d-flex justify-content-center align-content-center">
        <img src="~/images/Locked - Security.svg" class="images" alt="Security icon" />
    </div>
    
    <p class="text-center recovery-instruction">
        Please create a new password to login.
    </p>
    <form class="form" method="post" asp-action="">

        <div class="form-group mb-2">
            <input type="text" class="form-control form-control-lg" placeholder="New Password" required/>
        </div>
        <div class="form-group mb-2">
            <input type="text" class="form-control form-control-lg" placeholder="Re-enter New Password" required/>
        </div>
        <button type="submit" class="btn btn-block btn-lg btn-primary w-100">Change Password</button>
    </form>

</div>