@model AddRoomTypeDto
@{
    HotelDetailsViewDTo SingleHotel = ViewData["GetHotel"] as HotelDetailsViewDTo;
    IEnumerable<HotelCustomerDTO> customers = ViewData["Customers"] as IEnumerable<HotelCustomerDTO>;
}

<style>
    .my-color {
        background-color: #2067A1 !important;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col">
            <img class="img-fluid" style="width: 1250px; height: 520px;" src=@SingleHotel.Gallery.FirstOrDefault() />
        </div>
    </div>

    <div class="container mt-4">
        <div class="row">
            <div class="col">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link blue__override active" id="rooms-tab" data-bs-toggle="tab" data-bs-target="#rooms" type="button" role="tab" aria-controls="rooms" aria-selected="true">Rooms</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link blue__override" id="reviews-tab" data-bs-toggle="tab" data-bs-target="#reviews" type="button" role="tab" aria-controls="reviews" aria-selected="false">Reviews</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link blue__override" id="amenities-tab" data-bs-toggle="tab" data-bs-target="#amenities" type="button" role="tab" aria-controls="amenities" aria-selected="false">Amenities</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link blue__override" id="customers-tab" data-bs-toggle="tab" data-bs-target="#customers" type="button" role="tab" aria-controls="customers" aria-selected="false">Customers</button>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="rooms" role="tabpanel" aria-labelledby="home-tab">



                        <div class="d-flex justify-content-between w-100 mt-4">
                            <h6 class="mt-3 text-body">Room types</h6>

                            <div class="wrapper__action_buttons d-flex flex-row align-self-end">
                                <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#ModalRoomType">
